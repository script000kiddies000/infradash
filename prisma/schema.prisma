generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "linux-musl"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Host {
  id          String    @id @default(cuid())
  name        String
  ipAddress   String    @unique
  description String?
  services    Service[]
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Service {
  id          String   @id @default(cuid())
  name        String
  description String?
  url         String
  port        Int
  iconType    String   @default("preset")
  iconValue   String?
  category    String?
  hostId      String
  host        Host     @relation(fields: [hostId], references: [id], onDelete: Cascade)
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([hostId, port])
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String?
  icon      String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
}

model ServiceTemplate {
  id          String @id @default(cuid())
  name        String @unique
  defaultPort Int
  icon        String
  category    String?
}
